TARGET_LIB = soraftfont.a
OBJS = ../plugins/SoraFreetypeFont/SoraFreetypeFont.o \
		../plugins/SoraFreetypeFont/SoraFTFontManager.o \
	
INCDIR = ../sora ../plugins/SoraFreetypeFont ../plugins/SoraFreetypeFont/freetype
CFLAGS = -O2 -G0 -Wall
CXXFLAGS = $(CFLAGS)
ASFLAGS = $(CFLAGS)

LIBS = -lfreetype -lpng -lz 
LIBDIR = 
LDFLAGS =

PSPSDK=$(shell psp-config --pspsdk-path)
include $(PSPSDK)/lib/build.mak

install : $(TARGET_LIB)
	@cp soraftfont.a lib/
	@echo "Done"
